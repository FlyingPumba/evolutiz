<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_item_anim"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

          <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="0.1"
            android:background="@android:color/transparent" >
        </FrameLayout>
        
        <FrameLayout
            android:id="@+id/page_item_color"
            android:layout_width="6dip"
            android:layout_height="0dip"
            android:layout_marginLeft="1dip"
            android:layout_weight="0.75"
            android:background="@color/color_place_holder" >
        </FrameLayout>
        
          <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="0.15"
            android:background="@android:color/transparent" >
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <com.zapta.apps.maniana.view.ExtendedTextView
            android:id="@+id/page_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/page_item_arrow"
            android:background="@android:color/transparent"
            android:paddingBottom="2dp"
            android:paddingLeft="7dip"
            android:paddingRight="5dip"
            android:paddingTop="2dp"
            android:scrollHorizontally="false" >
        </com.zapta.apps.maniana.view.ExtendedTextView>

        <ImageView
            android:id="@+id/page_item_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="5dip"
            android:src="@drawable/place_holder" >
        </ImageView>
    </RelativeLayout>

</LinearLayout>