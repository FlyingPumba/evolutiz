<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >
<LinearLayout
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_weight="1"
	android:gravity="center"
	>
<TextView android:id="@+id/preparation_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/preparation_label"
/>
<LinearLayout
	android:orientation="horizontal"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:layout_weight="1"
>
<ImageView android:id="@+id/prep_up_button"
	android:src="@drawable/up_button"
	android:layout_width="48px"
	android:layout_height="48px"
	/>
<EditText android:id="@+id/preparation_text"
	android:layout_width="100px"
	android:layout_height="wrap_content"
	android:inputType="number"
	android:singleLine="true"
	android:selectAllOnFocus="true"
	android:gravity="right"
	android:text="@string/default_prep_time"
	/>
<ImageView android:id="@+id/prep_down_button"
	android:src="@drawable/down_button"
	android:layout_height="48px"
	android:layout_width="48px"
	android:gravity="center_vertical"
	/>
</LinearLayout>
<TextView android:id="@+id/duration_label"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/duration_label"
/>
<LinearLayout
	android:orientation="horizontal"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:layout_weight="1"
>
<ImageView android:id="@+id/meditate_up_button"
	android:src="@drawable/up_button"
	android:layout_width="48px"
	android:layout_height="48px"
	/>
<EditText android:id="@+id/meditation_text"
	android:layout_width="100px"
	android:layout_height="wrap_content"
	android:inputType="numberSigned"
	android:singleLine="true"
	android:selectAllOnFocus="true"
	android:gravity="right"
	android:text="@string/default_meditation_time"
	/>
<ImageView android:id="@+id/meditate_down_button"
	android:src="@drawable/down_button"
	android:layout_height="48px"
	android:layout_width="48px"
	/>
</LinearLayout>
</LinearLayout>
<Button android:id="@+id/sit" 
	android:text="@string/sit"
	android:layout_width="fill_parent"
	android:layout_height="50px" />
</LinearLayout>
