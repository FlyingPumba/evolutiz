<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_root" android:orientation="vertical"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:padding="10dp">

	<EditText android:id="@+id/text" android:layout_width="275dp"
		android:layout_height="100dp" android:hint="Comment"
		android:singleLine="false" android:textSize="13sp" android:minLines="5"
		android:gravity="top" />

	<Button android:id="@+id/submit_button" android:layout_width="100dp"
		android:layout_height="wrap_content" android:text="Submit" android:layout_gravity="center_horizontal" />
</LinearLayout>