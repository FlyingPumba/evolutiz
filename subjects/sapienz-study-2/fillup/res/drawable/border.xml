<?xml version="1.0" encoding="utf-8"?>

<!-- DRAWS A BORDER BOX AROUND A LAYOUT ITEM -->
<!-- usage: android:background="@drawable/border" -->

<shape xmlns:android="http://schemas.android.com/apk/res/android"> 
    
    <stroke 
        android:width="1dp" 
        android:color="@color/border_fg" 
        /> 

    <solid 
        android:color="@color/border_bg" 
        />
     
    <padding 
        android:left="3dp" 
        android:top="3dp" 
        android:right="3dp" 
        android:bottom="3dp" 
        /> 
    
    <corners 
        android:radius="4dp"
        /> 
        
</shape>