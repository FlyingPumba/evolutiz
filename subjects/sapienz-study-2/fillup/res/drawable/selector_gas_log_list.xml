<?xml version="1.0" encoding="utf-8"?>
<!--  ALLOWS LISTVIEW ROW TO CHANGE COLOR WHEN IT IS SELECTED -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- focused -->
    <item 
        android:state_focused="true" 
        android:drawable="@color/log_row_selected_bg" 
        />
    
    <!-- focused and pressed-->
    <item 
        android:state_focused="true" 
        android:state_pressed="true" 
        android:drawable="@color/log_row_selected_bg" 
        />
    
    <!-- pressed -->
    <item 
        android:state_pressed="true" 
        android:drawable="@color/log_row_selected_bg" 
        />
    
    <!-- default -->
    <item 
        android:drawable="@color/log_bg" 
        />
     
</selector>