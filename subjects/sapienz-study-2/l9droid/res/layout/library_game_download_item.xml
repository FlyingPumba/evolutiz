<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#f4f4f4"
    android:padding="3dp" >
    
	<Button
	    android:id="@+id/bCancel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/tvStatus"
	    android:layout_alignLeft="@+id/bDownload"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:text="Cancel"
	    android:visibility="visible" />

	<TextView
	    android:id="@+id/tvStatus"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/tvLink"
	    android:gravity="center_vertical"
	    android:padding="5dp"
	    android:text="Downloading..."
	    android:visibility="visible" />

	<TextView
	    android:id="@+id/tvLink"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_toLeftOf="@+id/bDownload"
	    android:gravity="center_vertical"
	    android:padding="5dp"
	    android:text="V2 PC"
	    android:visibility="visible" />

	<ProgressBar
	    android:id="@+id/pbProgress"
	    style="?android:attr/progressBarStyleHorizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/tvStatus"
	    android:layout_alignRight="@+id/bCancel"
	    android:layout_below="@+id/tvStatus"
	    android:layout_margin="5dp"
	    android:indeterminate="true"
	    android:visibility="visible" />

	<Button
	    android:id="@+id/bDownload"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:text="Download"
	    android:visibility="visible" />

</RelativeLayout>