<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Animations" />

    <style name="Animations.ItemMenuAbove">
        <item name="@android:windowEnterAnimation">@anim/item_menu_show_above</item>
        <item name="@android:windowExitAnimation">@anim/item_menu_dismiss_above</item>
    </style>

    <style name="Animations.ItemMenuBelow">
        <item name="@android:windowEnterAnimation">@anim/item_menu_show_below</item>
        <item name="@android:windowExitAnimation">@anim/item_menu_dismiss_below</item>
    </style>

    <style name="Animations.MainMenu">
        <item name="@android:windowEnterAnimation">@anim/main_menu_show</item>
        <item name="@android:windowExitAnimation">@anim/main_menu_dismiss</item>
    </style>

    <style name="ListWidgetPortraitBitmap">
        <item name="android:visibility">visible</item>
        <item name="android:padding">0dip</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ListWidgetLandscapeBitmap">
        <item name="android:visibility">gone</item>
        <item name="android:padding">0dip</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>