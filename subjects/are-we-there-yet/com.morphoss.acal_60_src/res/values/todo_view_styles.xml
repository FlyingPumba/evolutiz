<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

<color name="todo_button_colour">#fff030b0</color>
<style name="todo_view_label">
	<item name="android:textSize">14sp</item>
	<item name="android:paddingLeft">2sp</item> 
	<item name="android:textColor">#333366</item>
</style>

<style name="todo_checkbox_label">
	<item name="android:textSize">16sp</item>
	<item name="android:paddingLeft">40sp</item> 
	<item name="android:textColor">#333366</item>
</style>

<style name="todo_view_button">
	<item name="android:textSize">16sp</item>
	<item name="android:paddingLeft">3sp</item> 
	<item name="android:paddingTop">2sp</item> 
	<item name="android:paddingRight">3sp</item> 
	<item name="android:paddingBottom">2sp</item>
	<item name="android:background">@drawable/themed_button_fg</item> 
	<item name="android:minHeight">20sp</item>
	<item name="android:textColor">#333366</item>
</style>

<style name="todo_view_date" parent="@style/todo_view_button">
	<item name="android:textColor">#ff000000</item>
</style>

<style name="todo_view_time" parent="@style/todo_view_button">
	<item name="android:textColor">#ff000000</item>
</style>

<style name="todo_view_content">
	<item name="android:textSize">18sp</item>
	<item name="android:paddingLeft">10sp</item> 
	<item name="android:textColor">#000000</item>
</style>

<style name="todo_view_note">
	<item name="android:textSize">14sp</item>
	<item name="android:paddingLeft">4sp</item> 
	<item name="android:textColor">#555577</item>
</style>

</resources>