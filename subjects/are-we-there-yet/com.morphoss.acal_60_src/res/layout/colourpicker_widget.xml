<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="296dp"
	android:layout_height="256dp" >
	<com.morphoss.acal.activity.ColourPickerView
		android:id="@+id/ambilwarna_viewKotak"
		android:layout_width="240dp"
		android:layout_height="240dp"
		android:layout_x="8dp"
		android:layout_y="8dp" />
	<ImageView
		android:id="@+id/colourpicker_viewHue"
		android:layout_width="36dp"
		android:layout_height="240dp"
		android:layout_x="260dp"
		android:layout_y="8dp"
		android:scaleType="fitXY"
		android:src="@drawable/colourpicker_hue" />
	<ImageView
		android:id="@+id/ambilwarna_panah"
		android:layout_width="8dp"
		android:layout_height="9dp"
		android:layout_x="252dp"
		android:layout_y="4dp"
		android:scaleType="matrix"
		android:src="@drawable/ambilwarna_panah" />
	<ImageView
		android:id="@+id/colourpicker_pointer"
		android:layout_width="11dp"
		android:layout_height="11dp"
		android:layout_x="3dp"
		android:layout_y="3dp"
		android:scaleType="matrix"
		android:src="@drawable/colourpicker_pointer" />
</AbsoluteLayout>