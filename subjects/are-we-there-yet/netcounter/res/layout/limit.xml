<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:padding="10dip"
	android:layout_width="fill_parent" android:layout_height="wrap_content">

	<TextView android:text="@string/dialogCounterLimitText"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginBottom="8dip" />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<EditText android:id="@+id/limit" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text=""
			android:layout_weight="0.5" />

		<Spinner android:id="@+id/spinner" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:drawSelectorOnTop="true"
			android:layout_weight="1.0" android:entries="@array/byteUnits" />

	</LinearLayout>

</LinearLayout>