<RelativeLayout android:id="@+id/relativeMain" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android">

	<include android:id="@+id/titleBar" layout="@layout/title_bar" />

    <ImageButton android:id="@+id/syncButton" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/titleBar"
    	android:layout_marginTop="30dip"
    	android:layout_marginLeft="70dip"
    	android:src="@drawable/sync_button"/> 
    	
    <TextView android:id="@+id/syncTitle"
     	  android:layout_width="fill_parent"
     	  android:layout_height="wrap_content"
          android:textColor="#2ca02c" 
          android:textStyle="bold"
          android:textSize="16dip"
          android:text="@string/main.syncButton"
          android:layout_toRightOf="@id/syncButton"
          android:layout_alignBottom="@id/syncButton"
          android:layout_marginLeft="14dip"
          android:layout_marginBottom="18dip"
          android:padding="1dip" 
           />
           
    <ImageButton android:id="@+id/settingsButton" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/syncButton"
    	android:layout_marginTop="10dip"
    	android:layout_marginLeft="70dip"
    	android:src="@drawable/settings_button" />          
          
    <TextView android:id="@+id/settingsTitle" 
     	  android:layout_width="fill_parent"
     	  android:layout_height="wrap_content"
          android:textColor="#2ca02c" 
          android:textStyle="bold"
          android:text="@string/main.settingsButton" 
          android:textSize="16dip"
          android:layout_toRightOf="@id/settingsButton"
          android:layout_alignBottom="@id/settingsButton"
          android:layout_marginLeft="14dip"
          android:layout_marginBottom="18dip"
          android:padding="1dip" 
    />
                
    <ImageButton android:id="@+id/aboutButton" 
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
    	android:layout_below="@id/settingsButton"
    	android:layout_marginTop="10dip"
    	android:layout_marginLeft="70dip"
    	android:src="@drawable/about_button" /> 
    	
     <TextView android:id="@+id/aboutTitle" 
     	  android:layout_width="fill_parent"
     	  android:layout_height="wrap_content"
          android:textColor="#2ca02c" 
          android:textStyle="bold"
          android:text="@string/main.aboutButton"
          android:textSize="16dip"
          android:layout_toRightOf="@id/aboutButton"
          android:layout_alignBottom="@id/aboutButton"
          android:layout_marginLeft="14dip"
          android:layout_marginBottom="18dip"
          android:padding="1dip" 
           />
           
     <ImageButton android:id="@+id/resultsButton" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_below="@id/aboutButton"
    	android:layout_marginTop="10dip"
    	android:layout_marginLeft="70dip"
    	android:src="@drawable/results_button" /> 
    	
    <TextView android:id="@+id/resultsTitle" 
     	  android:layout_width="fill_parent"
     	  android:layout_height="wrap_content"
          android:textColor="#2ca02c" 
          android:textStyle="bold"
          android:text="@string/main.resultsButton"
          android:textSize="16dip"
          android:layout_toRightOf="@id/resultsButton"
          android:layout_alignBottom="@id/resultsButton"
          android:layout_marginLeft="14dip"
          android:layout_marginBottom="18dip"
          android:padding="1dip" 
           />

	<RelativeLayout android:id="@+id/footer" 
		android:layout_width="fill_parent" 
		android:layout_height="42dip" 
		android:background="#afe9af" 
		android:layout_alignParentBottom="true" > 
		
		<ImageButton  
			android:id="@+id/delete" 
			android:visibility="visible"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent" 
			android:adjustViewBounds="true"
			android:layout_alignParentRight="true"
			android:textColor="#FFFFFF"
			android:src="@drawable/delete_button_selector"
			android:scaleType="fitXY"
			android:background="#FFFFFF"
			android:paddingLeft="1dip"
			 />
			 
		<ImageButton  
			android:id="@+id/help" 
			android:visibility="visible"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent" 
			android:adjustViewBounds="true"
			android:layout_toLeftOf="@id/delete"
			android:textColor="#FFFFFF"
			android:src="@drawable/help_button_selector"
			android:scaleType="fitXY"
			android:background="#FFFFFF"
			android:paddingLeft="1dip"
			 />
			 
		<ImageButton  
			android:id="@+id/home" 
			android:visibility="visible"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent" 
			android:adjustViewBounds="true"
			android:layout_toLeftOf="@id/help"
			android:textColor="#FFFFFF"
			android:src="@drawable/home_button_selector"
			android:scaleType="fitXY"
			android:background="#FFFFFF"
			android:paddingLeft="1dip"
			 />
		
		</RelativeLayout>/>
           
</RelativeLayout>
