<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="MonthTitleBar">
		<item name="android:textColor">#F0F0F0</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">18sp</item>
		<item name="android:padding">0px</item>
		<item name="android:gravity">center_horizontal|top</item>
		<item name="android:background">@drawable/monthdayheadingsbg</item>
	</style>
	<style name="MonthDayColumnHeader">
		<item name="android:textColor">#001060</item>
		<item name="android:textStyle">bold</item>
		<item name="android:height">12sp</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
	</style>
	<style name="MonthDayInMonth">
		<item name="android:textSize">20sp</item>
		<item name="android:height">30dp</item>
		<item name="android:textColor">#001060</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">#A0DDDDDD</item>
		<item name="android:padding">0px</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
	</style>
	<style name="MonthDayHighlightDay">
		<item name="android:textSize">24sp</item>
		<item name="android:height">30dp</item>
		<item name="android:textColor">#c00000</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:background">#00FFFFFF</item>
	</style>
	<style name="MonthDayOutMonth">
		<item name="android:textSize">17sp</item>
		<item name="android:height">30dp</item>
		<item name="android:textColor">#606060</item>
		<item name="android:textStyle">normal</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:background">#80AAAAAA</item>
	</style>
	<style name="MonthDayOutMonthHighlighted">
		<item name="android:textSize">22sp</item>
		<item name="android:height">30dp</item>
		<item name="android:textColor">#c00000</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:background">#80AAAAAA</item>
	</style>
</resources>