<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/morphossbg"
	android:orientation="vertical" >
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1" >
		<TextView
			android:id="@+id/todo_list_title"
			style="@style/general_title_bar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/Tasks"
			android:tileMode="repeat" />
		<ListView
			android:id="@+id/todo_list"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_below="@id/todo_list_title"
			android:verticalSpacing="2dp" >
		</ListView>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/button_layout"
		android:layout_width="fill_parent"
		android:layout_height="36sp"
		android:background="@color/bottom_bg"
		android:gravity="bottom" >
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:paddingLeft="1sp"
			android:paddingRight="1sp" >
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@color/themed_button_colour" >
				<Button
					android:id="@+id/todo_due_button"
					style="@style/themed_bottom_button"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="@string/Due"
					android:width="70dp" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:paddingLeft="1sp"
			android:paddingRight="1sp" >
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@color/themed_button_colour" >
				<Button
					android:id="@+id/todo_all_button"
					style="@style/themed_bottom_button"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:includeFontPadding="true"
					android:padding="0sp"
					android:text="@string/All"
					android:width="70dp" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:paddingLeft="1sp"
			android:paddingRight="1sp" >
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@color/themed_button_colour" >
				<Button
					android:id="@+id/todo_add_button"
					style="@style/themed_add_button"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom|center_horizontal"
					android:text="@string/plus"
					android:width="70dp" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>